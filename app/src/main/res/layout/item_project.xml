<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/project_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

    <ImageView
        android:id="@+id/project_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/project"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/project_icon"
        android:textSize="24sp"
        android:textColor="#000"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:id="@+id/team_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/project_icon"
        android:src="@drawable/team"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="14dp"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/team_icon"
        android:textSize="18sp"/>
    
    <ImageView
        android:id="@+id/voted_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/tick"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name"
        android:visibility="gone"/>

</RelativeLayout>